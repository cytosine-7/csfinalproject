<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Climbing Stairs Calculator</title>

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        /* === ÈÅÆÁΩ© === */
        #overlay {
            position: fixed;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.4);
            display: none;
            top: 0;
            left: 0;
            z-index: 5;
        }

        /* === ÂÅ¥ÈÇäÊ¨Ñ === */
        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 10;
            top: 0;
            left: 0;
            background-color: #333;
            overflow-x: hidden;
            transition: 0.3s;
            padding-top: 60px;
        }

        .sidenav a {
            padding: 10px 20px;
            text-decoration: none;
            font-size: 18px;
            color: white;
            display: block;
        }

        .sidenav a:hover {
            background: #444;
        }

        .sidenav .closebtn {
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 30px;
        }

        /* === È†ÇÈÉ®Ê¨Ñ === */
        .header-bar {
            background: #3498db;
            padding: 12px;
            color: white;
            font-size: 24px;
        }

        .menu-icon {
            cursor: pointer;
        }

        /* === ‰∏ªÂÖßÂÆπÂçÄ === */
        .container {
            padding: 20px;
            text-align: center;
        }

        input, button {
            font-size: 16px;
            padding: 10px;
            margin: 10px;
        }

        #result {
            font-size: 20px;
            font-weight: bold;
            margin-top: 15px;
        }
    </style>
</head>

<body>

    <div id="overlay" onclick="closeNav()"></div>

    <!-- ÂÅ¥ÈÇäÊ¨Ñ -->
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

        <a href="#">üè† Home</a>
        <a href="#" style="color:white">üßÆ Climbing Stairs</a>
        <a href="#">üîç Linear Search</a>
        <a href="#">üìò Binary Search</a>
        <a href="#">‚ÑπÔ∏è About</a>
    </div>

    <!-- È†ÇÈÉ®ÈÅ∏ÂñÆ -->
    <div class="header-bar">
        <span class="menu-icon" onclick="openNav()">&#9776;</span>
        Climbing Stairs Calculator
    </div>

    <!-- ‰∏ªÂÖßÂÆπ -->
    <div class="container">
        <h2>üßÆ Climbing Stairs</h2>
        <p>Enter the number of stairs to calculate ways to climb.</p>

        <input type="number" id="stairs" placeholder="Number of stairs" min="0">
        <button onclick="calculateWays()">Calculate</button>

        <div id="result"></div>
    </div>

    <script>
        /* === ÂÅ¥ÈÇäÊ¨ÑÂäüËÉΩ === */
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("overlay").style.display = "block";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("overlay").style.display = "none";
        }

        /* === Áà¨Ê®ìÊ¢ØË®àÁÆó === */
        function calculateWays() {
            let n = parseInt(document.getElementById("stairs").value);
            if (isNaN(n) || n < 0) {
                document.getElementById("result").innerHTML = "‚ùå Enter a valid number!";
                return;
            }

            let dp = new Array(n + 2).fill(0);
            dp[0] = 1;
            dp[1] = 1;

            for (let i = 2; i <= n; i++) {
                dp[i] = dp[i - 1] + dp[i - 2];
            }

            document.getElementById("result").innerHTML =
                `‚úî Ways to climb <b>${n}</b> stairs: <b>${dp[n]}</b>`;
        }
    </script>

</body>
</html>
